// Experiment 3 - Num 3
#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
char characters[10];

    cout << "Input characters: \n";
    for (int i = 0; i < 10; i++)
    {
        cin >> characters[i];
        cout << endl;
    }

    cout << endl;
    cout << "Reverse Array: " << endl;
    for (int j = 9 ; j >= 0; j--)
    {
        cout << j + 1 << "th " << characters[j] << endl;
        cout << endl;
    }
_getch();
return 0;
}
